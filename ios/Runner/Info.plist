<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Info -->
    <key>CFBundleDevelopmentRegion</key>
    <string>$(DEVELOPMENT_LANGUAGE)</string>
    <key>CFBundleDisplayName</key>
    <string>FixItNow</string>
    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>
    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleInfoDictionaryVersion</key>
    <string>6.0</string>
    <key>CFBundleName</key>
    <string>FixItNow</string>
    <key>CFBundlePackageType</key>
    <string>APPL</string>
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- App Transport Security (Allow HTTP for APIs if needed) -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <key>NSAllowsArbitraryLoads</key>
        <true/>
    </dict>

    <!-- Background Modes (For Firebase Notifications & Background Fetch) -->
    <key>UIBackgroundModes</key>
    <array>
        <string>fetch</string>  <!-- Background Fetch -->
        <string>processing</string>  <!-- Background Processing -->
        <string>remote-notification</string>  <!-- Remote Notifications -->
    </array>

    <!-- Background Task Identifiers -->
    <key>BGTaskSchedulerPermittedIdentifiers</key>
    <array>
        <string>com.fixitnow.background.refresh</string>
        <string>com.fixitnow.background.processing</string>
    </array>

    <!-- Firebase App Configuration -->
    <key>FirebaseAppDelegateProxyEnabled</key>
    <false/>

    <!-- Required Permissions -->
    <key>NSCameraUsageDescription</key>
    <string>We need access to your camera for scanning QR codes.</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>We need access to your photo library for saving images.</string>
    <key>NSMicrophoneUsageDescription</key>
    <string>We need access to your microphone for voice messages.</string>

    <!-- Supported URL Schemes (Needed for Firebase Auth, Deep Linking) -->
    <key>CFBundleURLTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>CFBundleURLSchemes</key>
            <array>
                <string>com.googleusercontent.apps.1234567890-abc123def456</string> <!-- Replace with your REVERSED_CLIENT_ID -->
            </array>
        </dict>
    </array>

    <!-- Queries Schemes for External Apps -->
    <key>LSApplicationQueriesSchemes</key>
    <array>
        <string>http</string>
        <string>https</string>
    </array>

    <!-- Main UI Configuration -->
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    <key>UIMainStoryboardFile</key>
    <string>Main</string>

    <!-- Interface Orientation Support -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <key>CADisableMinimumFrameDurationOnPhone</key>
    <true/>
    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>
</dict>
</plist>
